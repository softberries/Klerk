<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.softberries.klerk.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="com.softberries.klerk.Perspective"
            id="com.softberries.klerk.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.softberries.klerk.application"
            name="Klerk">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Klerk">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.softberries.klerk.commands.ExitHandler"
            id="com.softberries.klerk.commands.exit"
            name="%command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="%menu.label">
            <command
                  commandId="com.softberries.klerk.commands.exit"
                  label="%command.label"
                  style="push"
                  tooltip="%command.tooltip">
            </command>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  id="settings"
                  label="%command.label.0"
                  style="push"
                  tooltip="%command.tooltip.0">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.softberries.klerk.preferences.DatabasePreferencePage"
            id="com.softberries.klerk.preferences.database"
            name="%page.name">
      </page>
   </extension>

</plugin>
